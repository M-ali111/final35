        const resultList = document.createElement('ul');

        // Проходимся по результатам и создаем элементы списка для каждого результата
        result.d.forEach(item => {
            const listItem = document.createElement('li');

            // Создаем изображение для каждого фильма
            const img = document.createElement('img');
            img.src = item.i ? item.i.imageUrl : 'placeholder.jpg'; // Проверяем, есть ли URL изображения в данных
            img.alt = item.l; // Название фильма используем как альтернативный текст
            listItem.appendChild(img); // Добавляем изображение в элемент списка

            // Добавляем название фильма как текст элемента списка
            const title = document.createElement('span');
            title.textContent = item.l;
            listItem.appendChild(title); // Добавляем название фильма в элемент списка

            resultList.appendChild(listItem); // Добавляем элемент списка в общий список
        });

        // Очищаем содержимое div перед добавлением нового списка
        imdbDataDiv.innerHTML = '';

        // Добавляем созданный список в div
        imdbDataDiv.appendChild(resultList);
    } catch (error) {
