<%- include('layout/header') %>

<div style="background-color: black;" class="container">
    <div  class="row">
        <div style="background-color: black;" class="col-lg-6 mx-auto mt-4">
            <div style="background-color: rgb(53, 52, 52);" class="card shadow">
                <div style="background-color: rgb(255, 0, 0);" class="card-header bg-primary">
                    <h5 class="text-light">Add New User</h5>
                </div>
                <div class="card-body p-4">
                    <form action="/add" method="post" id="add-form" enctype="multipart/form-data">
                        <div class="mb-3">
                            <label style="color: white;" for="name">Name</label>
                            <input type="text" name="name" class="form-control form-control-lg" placeholder="Enter Name" required/>
                        </div>
                        <div class="mb-3">
                            <label style="color: white;" for="email">Description</label>
                            <input type="text" name="description" class="form-control form-control-lg" placeholder="Enter Description" required/>
                        </div>
                        <div class="mb-3">
                            <label style="color: white;" for="phone">Location</label>
                            <input type="text" name="location" class="form-control form-control-lg" placeholder="Enter Location" required/>
                        </div>
                        <div class="mb-3">
                            <label style="color: white;" for="image" class="form-label">Select Image</label>
                            <input type="file" name="image" class="form-control form-control-lg" required/>
                        </div>
                        <div class="mb-3">
                            <input type="submit" name="submit" value="Add User" class="btn btn-primary btn-lg" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('layout/footer') %>