<div style="border-radius: 30px;" class="container">
    <div style="border-radius: 30px;" class="row my-4">
        <div style="border-radius: 30px;" class="col-lg-12">
            <% if (message) { %>
                <div class="alert alert-dismissible fade show alert-<%= message.type %>" role="alert">
                    <button class="btn-close" type="button" data-bs-dismiss="alert" aria-label="close"></button>
                    <strong><%= message.message %></strong>
                </div>
            <% } %>    
            <div style="border-radius: 7px;" class="table-responsive">
                <% if(typeof users !== 'undefined' && users !== '') { %>
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Image</th>
                                <th>Name</th>
                                <th>Description</th>
                                <th>Location</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% users.forEach((row, index) => { %>
                                <tr>
                                    <td><%= index %></td>
                                    <td><img src="<%= row.image%>" width="150" class="img-thumbnail" ></td>
                                    <td><%= row.name %></td>
                                    <td><%= row.description %></td>
                                    <td><%= row.location %></td>
                                    <td>
                                        <a href="/edit/<%= row._id %>" class="text-success"><i class="fas fa-edit fa-lg mx-1"></i></a>
                                        
                                        <a href="/delete/<%= row._id %>" class="text-danger"><i class="fas fa-trash fa-lg mx-1"></i></a>
                                    </td>
                                </tr>
                            <% }) %>
                        </tbody>
                    </table>
                <% } else { %>
                    <h1 class="text-center text-secondary mt-5">No information</h1>
                    <% } %>
            </div>
        </div>
